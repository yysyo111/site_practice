<%= render 'users/userinfo', user: current_user %>
<%= render 'books/form', book: @book %>
<h3>Book detail</h3>
<table class="table">
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to user_path(current_user) do %>
          <%= image_tag book.user.get_profile_image(100, 100) %><br>
          <%= book.user.name %>
        <% end %>
      </td>
      <td>
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %>
      </td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>

