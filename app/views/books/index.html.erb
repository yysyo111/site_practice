<h3>Book detail</h3>
<table class="table">
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to user_path(current_user) do %>
          <%= image_tag book.user.get_profile_image(100, 100) %><br>
          <%= book.user.name %>
        <% end %>
      </td>
      <td>
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %>
      </td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h3>New book</h3>
<%= form_with model: @book, url: books_path, method: :post do |f| %>
  <p>title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :body %>

  <%= f.submit "Create Book" %>
<% end %>
